<div class="card mb-3 userachievements-achievementseries">
    <h5 class="card-header">
        <a data-toggle="collapse" href="#{{id}}-achievement" aria-expanded="true" aria-controls="{{id}}-achievement" id="{{id}}-heading" class="d-block">
            <i class="fa fa-chevron-down pull-right"></i>
            {{name}}
        </a>
    </h5>
    <div id="{{id}}-achievement" class="collapse show" aria-labelledby="{{id}}-heading">
        <div class="card-body">
            <p class="card-text">{{description}}</p>
            <div class="card-deck">
                {{{badges}}}
            </div>
        </div>
    </div>
</div>